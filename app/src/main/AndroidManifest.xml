<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.krissmile31.mockproject">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name="com.krissmile31.mockproject.services.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MockProject">
        <service
            android:name="com.krissmile31.mockproject.services.PlaySongService" />
        <receiver android:name="com.krissmile31.mockproject.services.BroadcastReceiver.SongReceiver" />

        <activity
            android:name="com.krissmile31.mockproject.SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.krissmile31.mockproject.MainActivity" />
    </application>

</manifest>