<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/foreground"
    android:padding="@dimen/padding_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/thumnail_foreground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_layout"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="@dimen/padding_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_song_foreground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Be the Girl"
            style="@style/song"/>

        <TextView
            android:id="@+id/tv_singer_foreground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bebe Rexa"
            style="@style/singer"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/previous_foreground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_previous_song"/>

        <ImageView
            android:id="@+id/play_foreground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_pause_exclusion"/>

        <ImageView
            android:id="@+id/next_foreground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_next_song"/>

        <ImageView
            android:id="@+id/exit_foreground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_exit"/>


    </LinearLayout>
</LinearLayout>