<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="song">
<!--        <item name="android:layout_marginBottom">@dimen/song</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="singer">
        <item name="android:textColor">@color/singer</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.25dp</item>
        <item name="android:background">@color/singer</item>
    </style>

    <style name="text_header_nav">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_header_nav_size</item>
        <item name="android:textColor">@color/text_header_nav</item>
    </style>

    <style name="text_item_music">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_item_music</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_item_setting">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_setting_item</item>
    </style>

    <style name="text_tab_layout"  parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_item_music</item>
    </style>

    <style name="text_card_playlists">
        <item name="android:textColor">@color/text_playlists_color</item>
        <item name="android:textSize">@dimen/text_playlist_size</item>
    </style>

    <style name="text_singer_card_playlists">
        <item name="android:textColor">@color/text_song_playlist_color</item>
        <item name="android:textSize">@dimen/text_song_playlist_size</item>
    </style>

    <style name="text_albums">
        <item name="android:textColor">@color/albums_name</item>
        <item name="android:textSize">@dimen/text_size_albums</item>
    </style>

    <style name="text_details_albums">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/albums_details</item>
        <item name="android:textSize">@dimen/text_size_albums</item>
    </style>

    <style name="singer_artists">
        <item name="android:textColor">@color/artists_name</item>
        <item name="android:textSize">@dimen/text_size_artists</item>
    </style>

    <style name="details_artists">
        <item name="android:textColor">@color/artists_details</item>
        <item name="android:textSize">@dimen/text_details_artists</item>
    </style>
</resources>